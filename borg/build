#!/bin/bash
[[ "$1" == "final" ]] || exit 0
set -xeuo pipefail

LSB_RELEASE=trusty
APPNAME="$(cat /app/APPNAME)"
test "${APPNAME}"

cleanup() {
  sudo rm -rf ~/.ssh
}
trap cleanup EXIT

setup_ssh_keys() {
  mkdir -p ~/.ssh
  ruby -rjson -e 'puts JSON.load(File.read("/app/config/secrets.json"))["privkey"]' > ~/.ssh/id_rsa
  ruby -rjson -e 'puts JSON.load(File.read("/app/config/secrets.json"))["pubkey"]' > ~/.ssh/id_rsa.pub
  echo "apt.ec2.shopify.com ssh-rsa " \
    > ~/.ssh/known_hosts
  chmod 0600 ~/.ssh/id_rsa
}

build_deb() {
  make dev_bootstrap all
}

genchanges() {
  (
    cd pkg
    /app/borg/fpm2changes "${LSB_RELEASE}" *.deb > "${APPNAME}.changes"
  )
}

inspect() {
  dpkg-deb --contents /app/pkg/*.deb
  cat /app/pkg/*.changes
}

upload_deb() {
  ruby /app/borg/upload_deb.rb /app/pkg
}

main() {
  setup_ssh_keys
  build_deb
  genchanges
  inspect
  upload_deb
}
main "$@"

